<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <import resource="job-repository-context.xml" />

    <batch:job id="simpleCsvReaderJob" job-repository="jobRepository">
        <batch:step id="step1">
            <batch:tasklet>
                <batch:chunk reader="cvsItemReader" processor="processor" writer="simpleConsoleWriter"
                             commit-interval="4">
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <bean id="simpleConsoleWriter" class="com.cafetux.batch.writer.SimpleLogWriter" />
    <bean id="cvsItemReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="resource" value="classpath:datas/dataset.csv" />
        <property name="lineMapper">
            <bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
                <property name="lineTokenizer">
                    <bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
                        <property name="names" value="firstName,lastName,sexe" />
                    </bean>
                </property>
                <property name="fieldSetMapper">
                    <bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
                        <property name="prototypeBeanName" value="person" />
                    </bean>
                </property>

            </bean>
        </property>
    </bean>

    <!-- Un Bean prototype pour chaque entrÃ©e du CSV-->
    <bean id="person" class="com.cafetux.batch.model.Person" scope="prototype" />
    <bean id="processor" class="com.cafetux.batch.processor.AdressEmailGeneratorProcessor"/>


</beans>